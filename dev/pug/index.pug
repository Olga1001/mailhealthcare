extends layout/main

block variables
	-var title = 'Product'

block content
	.directory-first
		.container
			.flex-end-between.pt-35 
				.product-title
					ul.breadcrumbs.breadcrumbs_v2
						+breadcrumbs-item('Pantoprazole', '#')
						+breadcrumbs-item('Generic', '#')
						+breadcrumbs-item('Sildenafil', '#')
				.align-items-center
					p.fs-14.c-gray.mr-14 Share
					ul.social.social-gray.d-flex 
						each val in ['facebook','twitter','instagram']
							li.social-item 
								a.social-link(href="#")
									+icon(val)
			.product
				.flex-wrap.justify-content-between 
					.product-left 
						.slider-for 
							.slider-for-item 
								img(src="img/product/rectangle_12_7672.jpg", alt="product")
