include helpers/mixins


doctype html
html(lang="ru-RU")
	head
		meta(charset="utf-8")
		title #{title}
		<!--[if IE]>
		meta(http-equiv='X-UA-Compatible', content="IE = edge")
		<![endif]-->
		meta(name="viewport" content="width=device-width,initial-scale=1")
		meta(name="keywords" content="")
		link(rel="shortcut icon" href="img/fav_icon.png" type="image/png")
		link(rel="stylesheet" type='text/css' href="css/styles.css")
	body
		.wrapper
			header.header
				.header-top
					.container 
						.flex-center-between 
							ul.align-sm-items-center.d-none 
								each val in ['How to buy','Return','Delivery']
									li.menu2-item 
										a.c-white.fs-14(href="#")=val
							ul.align-sm-items-center.social2.d-none  
								each val in ['facebook','instagram','youtube']
									li
										a(href="#")
											+icon(val)

							nav.navmenu 
								ul.menu 
									li.menu-item.d-md-none
										a.menu-link(href="#") 
											span.align-items-center
												+icon("user")
												| Sign In
									each val, index in [{icon: 'books', link: 'A-Z Drugs'},{icon: 'head_question', link: 'FAQ'},{icon: '004-info', link: 'How it Works'},{icon: 'head_discount', link: 'Discount'},{icon: 'head_call', link: 'Contact Us'}]    
										li.menu-item(class=index==0 ? 'active': '') 
											a.menu-link(href="#")
												span.align-items-center
													+icon(val.icon)
													=val.link
								.navmenu-bottom.d-md-none  
									a.flex-center-center(href="tel:8557701077") 
										+icon("customer-service","wh-25 c-green mr-20")
										span.lh-1_2.text-nowrap
											span.fs-14.c-gray-600 Client Support
											span.fw-semi.d-block.c-blue-navy (855) 770-1077

				.container
					.flex-center-between
						button.burger.mr-20(type="button")
							span.burger-line.burger-line-top
							span.burger-line.burger-line-center
							span.burger-line.burger-line-bottom
						a.logo(href="#")
							.mr-lg-20.logo-item
					

						a.align-md-items-center.mx-auto.d-none(href="tel:8557701077") 
							+icon("customer-service","wh-25 c-green mr-20")
							span.lh-1_2.text-nowrap
								span.fs-14.c-gray-600 Client Support
								span.fw-semi.d-block.c-blue-navy (855) 770-1077
						form.search.d-xl-block.d-none
							input(type="text" placeholder="Type your drug name (like Atorvastin, Sildenafil, etc)" required)
							button.btn-search(type="submit")
								+icon("search_magnific")
							button.btn-close(type="reset")
								+icon("close")
							.search-dropdown 
								ul.search-dropdown_list
									li 
										a(href="#") asp
											b.fw-semi irin
									li 
										a(href="#") asp
											b.fw-semi irin 
											span.fw-semi / dipyridamole ER 
											span.fw-medium (generic Aggrenox)
									li 
										a(href="#") asp
											b.fw-semi irin 
											span.fw-semi / caffeine / dihydrocodeine 
											span.fw-medium (generic Synalgos DC)
									li 
										a(href="#") asp
											b.fw-semi irin 
											span.fw-semi / omeprazole DR 
											span.fw-medium (generic Yosprala)
									li 
										a(href="#") Asp
											b.fw-semi arlas
									li 
										a(href="#") Anaspaz
									li 
										a(href="#") Astepro (azelastine)
									li 
										a(href="#") buspirone
									li 
										a(href="#") Niaspan (niacin ER)
								.search-dropdown_view 
									.flex-center-between
										p.fw-bold.fs-14.text-up RECENTLY VIEW
										button.fs-14.c-green.fw-semi(type="button") Clear All
									ul
										each val in [{img: 'rectangle_12_7672.jpg', name: 'Pantoprazole', info: '30 tablets 100mg'},{img: 'rectangle_12_7672.jpg', name: 'Ketoprofen / Sildenafil', info: '30 tablets 100mg'},{img: 'rectangle_12_7672.jpg', name: 'Viagra / Sildenafil', info: '30 tablets 100mg'},]
											li.flex-center-between 
												.align-items-center
													a(href="#") 
														img(src="img/product/"+val.img, alt="product")
													div 
														a.fw-semi.fs-14.c-blue(href="#")=val.name
														p.fs-14=val.info 
												button.btn-remove(type="button")
													+icon("close")
									label.align-items-center.mt-20
										input.checkbox(type="checkbox" checked)
										span.check.mr-14
											+icon("check")
										span.fs-14 Save recent searches
						.align-items-center 
							a.align-md-items-center.link2.d-none(href="#") 
								+icon("user","c-green mr-14 wh-25")
								span.fs-14.fw-semi.c-blue-navy.text-nowrap Sign In
							a.align-items-center.link2(href="#" data-open-popup="popup-cart") 
								.mr-md-14
									+icon("shopping-cart","c-green wh-25")
								.align-md-items-center.d-none
									span.mr-14.fs-14.lh-18
										span.fw-semi.c-blue-navy Cart
										span.c-gray-600.d-block.text-nowrap 0 item(s)
									+icon("angle-down","c-green")

					form.search-xl.d-xl-none
						input(type="text" placeholder="Type your drug name (like Atorvastin, Sildenafil, etc)" required)
						button.btn-search(type="submit")
							+icon("search_magnific")
						button.btn-close(type="reset")
							+icon("close")
						.search-dropdown 
							ul.search-dropdown_list
								li 
									a(href="#") asp
										b.fw-semi irin
								li 
									a(href="#") asp
										b.fw-semi irin 
										span.fw-semi / dipyridamole ER 
										span.fw-medium (generic Aggrenox)
								li 
									a(href="#") asp
										b.fw-semi irin 
										span.fw-semi / caffeine / dihydrocodeine 
										span.fw-medium (generic Synalgos DC)
								li 
									a(href="#") asp
										b.fw-semi irin 
										span.fw-semi / omeprazole DR 
										span.fw-medium (generic Yosprala)
								li 
									a(href="#") Asp
										b.fw-semi arlas
								li 
									a(href="#") Anaspaz
								li 
									a(href="#") Astepro (azelastine)
								li 
									a(href="#") buspirone
								li 
									a(href="#") Niaspan (niacin ER)
							.search-dropdown_view 
								.flex-center-between
									p.fw-bold.fs-14.text-up RECENTLY VIEW
									button.fs-14.c-green.fw-semi(type="button") Clear All
								ul
									each val in [{img: 'rectangle_12_7672.jpg', name: 'Pantoprazole', info: '30 tablets 100mg'},{img: 'rectangle_12_7672.jpg', name: 'Ketoprofen / Sildenafil', info: '30 tablets 100mg'},{img: 'rectangle_12_7672.jpg', name: 'Viagra / Sildenafil', info: '30 tablets 100mg'},]
										li.flex-center-between 
											.align-items-center
												a(href="#") 
													img(src="img/product/"+val.img, alt="product")
												div 
													a.fw-semi.fs-14.c-blue(href="#")=val.name
													p.fs-14=val.info 
											button.btn-remove(type="button")
												+icon("close")
								label.align-items-center.mt-20
									input.checkbox(type="checkbox" checked)
									span.check.mr-14
										+icon("check")
									span.fs-14 Save recent searches
			.popup.popup-cart(data-popup="popup-cart") 
				.popup-container.max-420.stopPropagation 
					form.form-cart
						header.form-cart_head
							button.close(type="button")
							h2.fs-35.text-up your Cart
							.dashed-horizontal.mt-25
						ul.form-cart_list
							- 
								cart = [
									{
										image: 'rectangle_12_7672.jpg',
										name: 'Pantoprazole',
										generic: true,
										sildenafil: true,
									},
									{
										image: 'layer_67_7584.jpg',
										name: 'Ketoprofen',
										generic: false,
										sildenafil: true,
									},
								]
							each val in cart
								li.form-cart_product
									.justify-content-between.pb-10
										.d-flex.pt-sm-0.pt-20
											a.shrink-0(href="#") 
												img.img-product(src="img/product/"+val.image, alt="product")
											.justify-content-between.flex-column 
												.lh-1_2.pb-15
													a.fs-22.text-up.c-blue.text-ellipses.max-242(href="#")=val.name
													.flex-wrap
														if (val.generic == true) 
															.d-flex
																a.fs-14.c-green(href="#") Generic
																if (val.generic == true && val.sildenafil == true) 
																	p.fs-14.c-gray-light.mx-10 /
														if (val.sildenafil == true) 
															a.fs-14.c-green(href="#") Sildenafil
												.lh-18
													p.fs-14.fw-bold Prescription Settings
													.flex-wrap 
														a.fs-14.c-blue(href="#") Generic
														p.fs-14.c-gray-light.mx-10 /
														a.fs-14.c-blue(href="#") Tablet
													.flex-wrap 
														a.fs-14.c-blue(href="#") 40mg
														p.fs-14.c-gray-light.mx-10 /
														a.fs-14.c-blue(href="#") 30 tablets
										button.btn-remove.h-fit-content(type="button")
											+icon("bin", "c-gray-light ")
									hr.line-dotted
									.flex-center-between 
										.pt-10
											.counter.d-flex 
												button.counter-minus.counter-btn(type="button")
												input.counter-input(type="number" value="1")
												button.counter-plus.counter-btn(type="button")
										.align-items-sm-end.pt-10.d-block.text-right
											p.fs-14.c-gray-light.mr-sm-10 Price
											p.fs-22.fw-bold.text-up.c-green $8.38
					.popup-bottom
						.align-items-end.pb-10 
							p.fs-14.c-gray-600.min-w-75 Sub Total
							hr.line-dotted.w-170.ml-0.mr-10
							p.fs-14.fw-semi.c-gray-600 $373,76
						.align-items-end.pb-10  
							p.fs-20.fw-medium.min-w-75 Total
							hr.line-dotted.w-170.ml-0.mr-10
							p.fs-22.fw-bold.c-green $373,76
						a.btn.lh-50.w-100.mt-20(href="#") Checkout
							+icon("arrow_right", "wh-20")
			
		script(src="js/jquery-3.5.1.min.js")
		script(src="js/main.js")
