header.header
    .container
        .flex-center-between 
            button.burger(type="button")
                span.burger-line.burger-line-top
                span.burger-line.burger-line-center
                span.burger-line.burger-line-bottom
            a.logo(href="#")
                .mr-lg-20.logo-item
            form.search.mr-auto
                input(type="text" placeholder="Type your drug name (like Atorvastin, Sildenafil, etc)" required)
                button(type="submit")
                    +icon("search_magnific")
            nav.navmenu 
                ul.menu 
                    each val, index in [{icon: 'head_question', link: 'How it Works'},{icon: 'head_discount', link: 'Discount'},{icon: 'head_call', link: 'Contact Us'}]    
                        li.menu-item(class=index==0 ? 'active': '') 
                            a.menu-link(href="#")
                                span.align-items-center
                                    +icon(val.icon)
                                    =val.link
        form.search-lg
            input(type="text" placeholder="Type your drug name (like Atorvastin, Sildenafil, etc)")
            button(type="submit")
                +icon("search_magnific")